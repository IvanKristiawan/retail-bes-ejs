<% layout('layouts/boilerplate') %> 

<style>
    @media (max-width: 800px) {
        .wrapper {
            flex-direction: column;
        }
    }
    .index-wrapper {
        border: 1px solid #B2BABB;
        padding-top: 15px;
        border-radius: 10px;
        background-color: #D6EAF8;
    }
    .add-btn {
        margin-top: 20px;
    }
    .wrapper {
        border: 1px solid #CCD1D1;
        border-radius: 10px;
        margin: 20px 0px;
        display: flex;
        padding-top: 10px;
    }
    .list-wrapper {
        display: flex;
        flex: 1;
    }
    .detail-wrapper {
        margin-right: 30px;
    }
    .list-details {
        font-size: 15px;
        font-weight: 500;
    }
</style>

<div class="container index-wrapper">
    <h3>PENJUALAN STOK</h3>
    <div class="container">
        <form class="d-flex" action="/pembelianStok/search" method="POST">
            <input class="form-control me-2" placeholder="Cari Nomor Nota" aria-label="Search" type="text" name="nomorNota" id="nomorNota">
            <button class="btn btn-outline-dark" type="submit">Search</button>
        </form>
        <a href="/penjualanStok/new"><button class="btn btn-primary add-btn">Add</button></a>
        <a href="/penjualanStok/<%= penjualanStok.nomorNota %>/edit"><button class="btn btn-warning add-btn">Edit</button></a>
        <a href="/penjualanStok/<%= penjualanStok.nomorNota %>/newa"><button class="btn btn-success add-btn">Add Stok</button></a>
        <form action="/penjualanStok/<%= penjualanStok.nomorNota %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" style="margin-top: 10px;">Delete</button>
        </form>
    </div>
    <div class="container wrapper">
        <div class="list-wrapper">
            <div class="detail-wrapper">
                <p class="list-details">No. Nota</p>
                <p class="list-details">Tanggal</p>
                <p class="list-details">Jenis</p>
                <p class="list-details">Total</p>
            </div>
            <div class="detail-data-wrapper">
                <p class="list-details">: <%= penjualanStok.nomorNota %></p>
                <p class="list-details">: <%= penjualanStok.tanggal.getDate() %>/<%= penjualanStok.tanggal.getMonth()+1 %>/<%= penjualanStok.tanggal.getFullYear() %> </p>
                <p class="list-details">: <%= penjualanStok.jenis %></p>
                <p class="list-details">: <%= penjualanStok.total %></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row list-container">
            <%- include('./listapenjual') %> 
        </div>
    </div>
    <a href="/penjualanStok">back</a>
</div>