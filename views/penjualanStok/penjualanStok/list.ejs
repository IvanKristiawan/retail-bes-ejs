<style>
    a {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
</style>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">No. Nota</th>
            <th scope="col">Tanggal</th>
            <th scope="col">Jenis</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        <% for(let penjualanStok of penjualanStoks) { %> 
            <tr>
                <th scope="row"><a href="/penjualanStok/<%= penjualanStok.nomorNota %>"><%= penjualanStok.nomorNota %></a></th>
                <td><a href="/penjualanStok/<%= penjualanStok.nomorNota %>"><%= penjualanStok.tanggal.getDate() %>/<%= penjualanStok.tanggal.getMonth()+1 %>/<%= penjualanStok.tanggal.getFullYear() %></a></td>
                <td><%= penjualanStok.jenis %></td>
                <td><%= penjualanStok.total %></td>
            </tr>
        <% } %> 
    </tbody>
</table>