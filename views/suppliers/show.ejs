<% layout('layouts/boilerplate') %> 

<style>
    @media (max-width: 800px) {
        .wrapper {
            flex-direction: column;
        }
    }
    .index-wrapper {
        border: 1px solid #B2BABB;
        padding-top: 15px;
        border-radius: 10px;
        background-color: #D6EAF8;
    }
    .add-btn {
        margin-top: 20px;
    }
    .wrapper {
        border: 1px solid #CCD1D1;
        border-radius: 10px;
        margin: 20px 0px;
        display: flex;
        padding-top: 10px;
    }
    .list-wrapper {
        display: flex;
        flex: 1;
    }
    .detail-wrapper {
        margin-right: 30px;
    }
    .list-details {
        font-size: 15px;
        font-weight: 500;
    }
</style>

<div class="container index-wrapper">
    <h3>SUPPLIER</h3>
    <div class="container">
        <form class="d-flex" action="/suppliers/search" method="POST">
            <input class="form-control me-2" placeholder="Cari Supplier" aria-label="Search" type="text" name="supplier" id="supplier">
            <button class="btn btn-outline-dark" type="submit">Search</button>
        </form>
        <a href="/suppliers/new"><button class="btn btn-primary add-btn">Add</button></a>
        <a href="/suppliers/<%= supplier._id %>/edit"><button class="btn btn-warning add-btn">Edit</button></a>
        <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" style="margin-top: 10px;">Delete</button>
        </form>
    </div>
    <div class="container wrapper">
        <div class="list-wrapper">
            <div class="detail-wrapper">
                <p class="list-details">Kode</p>
                <p class="list-details">Supplier</p>
                <p class="list-details">Alamat</p>
                <p class="list-details">Kota</p>
                <p class="list-details">Telpon</p>
                <p class="list-details">NPWP</p>
            </div>
            <div class="detail-data-wrapper">
                <p class="list-details">: <%= supplier.kode %></p>
                <p class="list-details">: <%= supplier.namaSupplier %></p>
                <p class="list-details">: <%= supplier.alamatSupplier %></p>
                <p class="list-details">: <%= supplier.kota %></p>
                <p class="list-details">: <%= supplier.telp %></p>
                <p class="list-details">: <%= supplier.npwp %></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row list-container">
            <%- include('./list') %> 
        </div>
    </div>
    <a href="/suppliers">back</a>
</div>