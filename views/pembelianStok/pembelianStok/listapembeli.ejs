<style>
    a {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }
</style>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Kode</th>
            <th scope="col">Nama Stok</th>
            <th scope="col">Qty</th>
            <th scope="col">Harga</th>
            <th scope="col">Potongan</th>
            <th scope="col">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        <% for(let ApembelianStok of ApembelianStoks) { %> 
                <tr>
                    <th scope="row"><%= ApembelianStok.kodeStok %></th>  
                    <% for(let stok of stoks) {%> 
                        <% if(stok.kode == ApembelianStok.kodeStok) {%>
                            <td><a href="/pembelianStok/<%= pembelianStok.nomorNota %>/<%= stok.kode %>"><%= stok.namaStok %></a></td>
                        <% } %>     
                    <% } %>     
                    <td><%= ApembelianStok.qty %></td>
                    <td><%= ApembelianStok.hargaSatuan %></td>
                    <td><%= ApembelianStok.potongan %>%</td>
                    <td><%= ApembelianStok.subtotal %></td>
                </tr>
        <% } %> 
    </tbody>
</table>